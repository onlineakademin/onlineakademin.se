<div class="container wrapper-content">
  <header class="page">
    <h1>{{model.name}}</h1>
  </header>

  <div class="wrapper-with-sidebar">
    <div class="wrapper-sidebar {{if sidebarHiddenXS 'hidden-xs'}}">
      <div class="inner-sidebar" data-spy="affix" data-offset-top="100">
        {{component "node-menu" nodes=model.children}}
      </div>
    </div>

    <div class="wrapper-main">
      {{outlet}}
    </div>
  </div>
</div>
