<div class="container wrapper-content">
  <header class="page">
    <h1>Kurser</h1>
  </header>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <div class="wrapper-steps">
        {{#each model as |node|}}
          <div class="col-xs-12 col-sm-4">
          {{#link-to 'nodes.lvl0' node.id class="step-node"}}{{node.name}}{{/link-to}}
          </div>
        {{/each}}
      </div>

      <p class="text-center" style="margin-top: 40px; font-style: italic">
        Steg 4 och 5 kommer snart!
      </p>
    </div>
  </div>
</div>
